@using System.Web.Optimization
@using EPiServer.Framework.Web.Mvc.Html
@using Bysoft.Optimizely.Models.ViewModels
@using Bysoft.Optimizely.Models.Pages

@model IPageViewModel<SitePageData>

<!DOCTYPE html>
<html lang="@Model.CurrentPage.LanguageBranch">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=10" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@Model.CurrentPage.MetaTitle</title>

    <link rel="shortcut icon" href="@Url.Content("~/favicon.ico")" type="image/x-icon" />
    @Html.CanonicalLink()
    @Html.AlternateLinks()
    @Styles.Render("~/bundles/css")
    @Scripts.Render("~/bundles/js")
    @Html.RequiredClientResources("Header")
    @Html.RenderEPiServerQuickNavigator()
</head>

<body>

    @Html.FullRefreshPropertiesMetaData()
    <div class="container">
        @if (!Model.Layout.HideHeader)
        {
            Html.RenderPartial("Header", Model);
        }

        @RenderBody()

        @if (!Model.Layout.HideFooter)
        {
            Html.RenderPartial("Footer", Model);
        }
    </div>
    @Html.RequiredClientResources("Footer")
</body>
</html>
